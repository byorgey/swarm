{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "https://raw.githubusercontent.com/swarm-game/swarm/main/data/schema/placement.json",
    "title": "Placement",
    "description": "Structure placement",
    "type": "object",
    "additionalProperties": false,
    "properties": {
        "src": {
            "type": "string",
            "description": "Name of structure definition"
        },
        "truncate": {
            "type": "boolean",
            "description": "Overlay should be truncated if it exceeds bounds of target structure"
        },
        "offset": {
            "$ref": "planar-loc.json"
        },
        "orient": {
            "$ref": "structure-orient.json"
        }
    }
}
